// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model Click {
    id        Int      @id @default(autoincrement())
    key       String // Ex: "metas", "comunicacao", "essencial", "profissional"
    type      String // "feature" ou "pricing"
    count     Int      @default(1)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([type, key])
    @@map("clicks")
}
